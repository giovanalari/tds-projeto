@model Pedido

<h2>Novo Pedido</h2>

<form asp-action="Novo">
    <div class="form-group">
        <label for="clienteNome">Nome do Cliente</label>
        <input type="text" class="form-control" id="clienteNome" name="Cliente.Nome" />
    </div>
    <div class="form-group">
        <label for="clienteCPF">CPF do Cliente</label>
        <input type="text" class="form-control" id="clienteCPF" name="Cliente.CPF" />
    </div>
    <!-- Adicione outros campos para cliente, itens e fornecedor conforme necessÃ¡rio -->
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
